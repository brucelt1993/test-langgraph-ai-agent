# AI Agent 开发环境配置
# 这是开发环境的配置文件，包含了适合开发使用的默认值
# 不要在生产环境中使用这些配置！

# ================================
# 数据库配置（开发环境）
# ================================
POSTGRES_DB=ai_agent_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ================================
# Redis配置（开发环境）
# ================================
REDIS_PASSWORD=devpassword

# ================================
# 应用配置（开发环境）
# ================================
SECRET_KEY=dev_secret_key_only_for_development_change_in_production
ENVIRONMENT=development
LOG_LEVEL=DEBUG
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ================================
# AI服务配置
# ================================
# 请设置你的实际API密钥
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# ================================
# 外部API配置
# ================================
# 请设置你的实际天气API密钥
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=http://api.openweathermap.org/data/2.5

# ================================
# 开发服务配置
# ================================
FRONTEND_URL=http://localhost:3000
API_BASE_URL=http://localhost:8000/api
WS_BASE_URL=ws://localhost:8000/api/ws

SESSION_TIMEOUT=60
MAX_CONVERSATION_ROUNDS=10

# ================================
# 端口配置（开发环境）
# ================================
HTTP_PORT=80
HTTPS_PORT=443
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ================================
# 性能配置（开发环境）
# ================================
MAX_WORKERS=2
WORKER_TIMEOUT=120
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=5
REDIS_POOL_SIZE=5

# ================================
# 开发调试配置
# ================================
DEBUG_MODE=true
ENABLE_DOCS=true
ENABLE_TEST_ENDPOINTS=true
AUTO_SYNC_DB=true
ENABLE_DB_QUERY_LOG=true
SLOW_QUERY_THRESHOLD=500
ENABLE_REQUEST_LOG=true

# ================================
# 监控配置（开发环境）
# ================================
GRAFANA_PASSWORD=admin
ENABLE_APM=false
ENABLE_DEBUG_LOGGING=true
LOG_FILE_PATH=./logs/dev.log
LOG_MAX_FILE_SIZE=50
LOG_BACKUP_COUNT=3

# ================================
# 安全配置（开发环境 - 宽松设置）
# ================================
FORCE_HTTPS=false
ENABLE_CSRF_PROTECTION=false
ENABLE_RATE_LIMITING=false
API_RATE_LIMIT=1000

# ================================
# 缓存配置（开发环境）
# ================================
CACHE_TTL=300
ENABLE_RESPONSE_CACHE=false
SESSION_CACHE_TTL=900

# ================================
# JWT配置（开发环境）
# ================================
JWT_EXPIRY_MINUTES=120
REFRESH_TOKEN_EXPIRY_DAYS=7
ENABLE_MFA=false

# ================================
# 文件存储配置
# ================================
MAX_UPLOAD_SIZE=10
UPLOAD_PATH=./uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,txt,docx

# ================================
# 邮件配置（开发环境 - 使用MailHog）
# ================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=false
FROM_EMAIL=dev@localhost

# ================================
# 第三方集成（开发环境 - 可选）
# ================================
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=
ENABLE_ERROR_TRACKING=false

# ================================
# 开发说明
# ================================
# 1. 这个配置文件是为开发环境设计的
# 2. 包含了宽松的安全设置和调试功能
# 3. 不要在生产环境中使用
# 4. 你仍然需要设置有效的API密钥
# 5. 数据库和Redis使用简单的密码，仅适用于开发环境